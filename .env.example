# Path to cameras config file (JSON or YAML)
# Default: auto-discovers from ~/.config/dahua-mcp/cameras.yaml or cameras.json
# DAHUA_CAMERAS_CONFIG=~/.config/dahua-mcp/cameras.yaml

# Server settings
DAHUA_TIMEOUT=20
READ_ONLY_MODE=false
DISABLED_TAGS=
LOG_LEVEL=INFO

# Rate limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_WINDOW_MINUTES=1

# Transport (stdio, sse, http)
MCP_TRANSPORT=stdio
MCP_HTTP_HOST=0.0.0.0
MCP_HTTP_PORT=8000
MCP_HTTP_BEARER_TOKEN=
